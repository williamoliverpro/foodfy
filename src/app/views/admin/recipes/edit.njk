{% extends "admin/layout.njk"%}

{% block content %}
    <div class="menu">
        <div class="title">
            <h1>Editing recipe</h1>
        </div>
        <form action="/admin/recipes?_method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{recipe.id}}">

            {% include "admin/recipes/fields.njk" %}
        </form>
        <form action="/admin/recipes?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{recipe.id}}">
            <button class="button_delete" type="submit">Delete</button>
        </form>
    </div>
    <script src="/scripts.js"></script>
{% endblock content %}