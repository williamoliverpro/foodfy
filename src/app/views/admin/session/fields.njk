<div class="item">
    <div class="badge">Email</div>
    <div class="input">
        <input 
            type="email" 
            name="email"
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div class="badge">Password</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Digite sua senha"
        >
    </div>
</div>